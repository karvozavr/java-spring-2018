<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.spbau.mit.karvozavr.tictactoe.ui.layout.GameStatsLayoutController">
    <stylesheets>
        <URL value="@styles/styles.css" />
    </stylesheets>
    <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <top>
            <VBox alignment="CENTER">
                <Label styleClass="currentTurnLabel" text="Statistics:" />
            </VBox>
        </top>

        <center>

        </center>
        <center>
            <TableView fx:id="gameStatsView" prefWidth="400.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn prefWidth="100.0" text="Player X">
                        <cellValueFactory>
                            <PropertyValueFactory property="playerX" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="100.0" text="Player O">
                        <cellValueFactory>
                            <PropertyValueFactory property="playerO" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="100.0" text="Game result">
                        <cellValueFactory>
                            <PropertyValueFactory property="gameResult" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="150.0" text="Time">
                        <cellValueFactory>
                            <PropertyValueFactory property="dateTime" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </center>
    </BorderPane>

</AnchorPane>
